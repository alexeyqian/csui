@{
    ViewData["Title"] = "Special Page";
}

<div class="row">
    <div class="col-md-4"></div>

    <div class="col-md-8">

        <div class="highchart-question-container">
            <div class="highchart-question-title">
                1. Choices for Very Long Text Should Wrap and Right Aligned?
            </div>
            <div class="highchart-main-section">
                <div class="highchart-right-part">
                    <div id="barChartLongText"></div>
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts{
  
    <script>
        let obj = {}
        obj.container = 'barChartLongText';
        obj.data = Array.from({ length: 7 }, () => Math.floor(Math.random() * 100));
        obj.dataForBackground = Array(obj.data.length).fill(100);
        obj.categories = ['Option 1', 'A Option', 'C Option', 'B Option', 'Option 5', 'Option very very very very very very very very very long text', 'Option right aligned'];
        createChoiceChart(obj);
    </script>

}
